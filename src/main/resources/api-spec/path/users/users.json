{
  "post": {
    "summary": "create a user",
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "screenName": {
                "description": "screen name of user. this is unique in this server",
                "type": "string",
                "example": "newUser1"
              },
              "password": {
                "type": "string",
                "example": "hahgh1Gu"
              }
            }
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "a user has been created",
        "headers": {
          "Set-Cookie": {
            "$ref": "./headers/set-cookie.json"
          }
        },
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number",
                  "example": 3
                },
                "screenName": {
                  "type": "string",
                  "example": "newUser1"
                }
              }
            }
          }
        }
      },
      "400": {
        "description": "Bad Request. Maybe screen name is duplicated"
      }
    }
  }
}
