{
  "post": {
    "summary": "create a user",
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "./usersPostRequest.json"
          }
        }
      }
    },
    "responses": {
      "204": {
        "description": "a user has been created",
        "headers": {
          "Set-Cookie": {
            "$ref": "./headers/set-cookie.json"
          }
        },
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../model/user.json"
            }
          }
        }
      },
      "400": {
        "description": "Bad Request. Maybe screen name is duplicated"
      }
    }
  }
}
