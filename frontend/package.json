{
  "name": "kottage-front",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22"
  },
  "scripts": {
    "test": "vitest",
    "dev": "concurrently -n NEXT,TS -c magenta,cyan \"pnpm dev:noTs\" \"pnpm ts --watch\"",
    "dev:noTs": "cp tsconfig.dev.json tsconfig.json && next dev",
    "build": "cp tsconfig.production.json tsconfig.json && next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "eslint .",
    "prepare": "husky",
    "postinstall": "patch-package",
    "create-component": "hygen component new",
    "generate-client": "openapi-generator-cli generate --generator-key v1.0 && pnpm prettier --write --ignore-unknown src/repository/openapi/generated/",
    "regenerate-client": "rm -r src/repository/openapi/generated && pnpm generate-client",
    "ts": "tsc --noEmit --incremental"
  },
  "dependencies": {
    "feed": "5.2.0",
    "highlight.js": "11.11.1",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-markdown": "10.1.0",
    "rehype-highlight": "7.0.2",
    "remark-breaks": "4.0.0",
    "swr": "2.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@openapitools/openapi-generator-cli": "2.29.0",
    "@tailwindcss/postcss": "4.2.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "^16.2.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/react-test-renderer": "19.1.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "9.2.1",
    "eslint": "9.39.3",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "hygen": "6.2.11",
    "identity-obj-proxy": "3.0.0",
    "jsdom": "^28.0.0",
    "lint-staged": "16.2.7",
    "msw": "2.12.10",
    "next-sitemap": "4.2.3",
    "patch-package": "8.0.1",
    "postcss": "8.5.6",
    "postcss-loader": "8.2.1",
    "prettier": "3.8.1",
    "react-test-renderer": "19.2.4",
    "stylelint": "17.3.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-standard": "40.0.0",
    "tailwindcss": "4.2.1",
    "tsconfig-paths-webpack-plugin": "4.2.0",
    "typescript": "5.9.3",
    "undici": "7.22.0",
    "vite-tsconfig-paths": "^6.0.0",
    "vitest": "^4.0.0",
    "waait": "1.0.5",
    "whatwg-fetch": "3.6.20"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
