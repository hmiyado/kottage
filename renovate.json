{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "platformCommit": false,
  "cloneSubmodules": true,
  "git-submodules": {
    "enabled": true
  }
}
