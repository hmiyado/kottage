{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchFiles": ["backend/**"],
      "matchPackagePatterns": [".*"],
      "minimumReleaseAge": "14 days"
    },
    {
      "automerge": true,
      "matchFiles": ["frontend/**"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "minimumReleaseAge": "14 days",
      "rangeStrategy": "update-lockfile"
    }
  ],
  "ignoreDeps": ["openjdk"],
  "platformCommit": false,
  "cloneSubmodules": false
}